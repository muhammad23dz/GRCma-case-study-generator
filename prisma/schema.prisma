  title          String
  content        String   // Rich text/markdown content
  displayOrder   Int      @default(0)
  isVisible      Boolean  @default(true)
  icon           String?  // Lucide icon name
  
  config         TrustCenterConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([configId])
  @@index([sectionType])
}

// ============================================
// FEATURE: KNOWLEDGE BASE
// Reusable Q&A library for security questionnaires
// ============================================

model KnowledgeBaseEntry {
  id             String   @id @default(cuid())
  
  question       String   // The security question
  answer         String   // The approved answer
  category       String   // security, privacy, compliance, infrastructure, governance, etc.
  tags           String[] // For search and filtering
  
  // Metadata
  status         String   @default("draft") // draft, approved, archived
  approvedBy     String?
  approvedAt     DateTime?
  version        Int      @default(1)
  
  // Linking
  controlId      String?  // Link to related control
  policyId       String?  // Link to related policy
  frameworkId    String?  // Link to framework requirement
  
  // AI/Confidence
  confidenceScore Float?  // 0-1 confidence in answer accuracy
  lastUsedAt     DateTime?
  usageCount     Int      @default(0)
  
  owner          String
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@index([category])
  @@index([status])
}

