
# GRCma Environment Template
# -------------------------
# Copy this file to .env and populate the values below.
# DO NOT COMMIT YOUR ACTUAL .ENV FILE TO VERSION CONTROL.

# 1. Database (Neon / PostgreSQL)
DATABASE_URL="postgresql://neondb_owner:..."

# 2. Authentication (Clerk)
# Get these from your Clerk Dashboard -> API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# 3. AI Services (Primary & Fallback)
# Set your preferred provider: 'github', 'openai', 'deepseek', 'anthropic', 'google'
LLM_PROVIDER="github"

# Provide tokens for the providers you wish to use:
GITHUB_TOKEN="ghp_..."
OPENAI_API_KEY="sk-..."
DEEPSEEK_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
GOOGLE_API_KEY="AIza..."

# 4. Security & Encryption
# Generate a random 32-byte hex string for AES-256-GCM encryption
# Example: openssl rand -hex 32
ENCRYPTION_KEY="your_32_byte_hex_key_here"

# 5. Payments (Lemon Squeezy)
LEMONSQUEEZY_API_KEY="ls_..."
LEMONSQUEEZY_STORE_ID="12345"
LEMONSQUEEZY_WEBHOOK_SECRET="wh_..."

# 6. Email (SMTP / Resend)
# Either use SMTP:
SMTP_HOST="smtp.resend.com"
SMTP_PORT="587"
SMTP_USER="resend"
SMTP_PASS="re_..."
SMTP_FROM="GRCma <notifications@yourdomain.com>"

# Or Resend API Key directly:
RESEND_API_KEY="re_..."

# 7. Others
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
